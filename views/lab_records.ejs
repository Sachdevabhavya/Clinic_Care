<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Records Viewer</title>
    <link rel="stylesheet" href="/med_records.css">
</head>
<body>

<div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Menu</h2>
        <a href="#">Prescription</a>
        <a href="#">Categories</a>
        <a href="#">Pages</a>
        <a href="#">Comments</a>
        <a href="#">Appearance</a>
        <a href="#">Health Data</a>
        <a href="#">Users</a>
        <a href="#">Settings</a>
    </div>

    <!-- Main Content -->
    <div class="main">
        <!-- Header -->
        <div class="header">
            <h2>Medical History</h2>
            <div class="user-info">
                <p>Name: <%= name %></p>
                <p>Email: <%= email %></p>
                <p>Contact: <%= phone_no %></p>
            </div>
        </div>

        <!-- Combined Medical Info Card -->
        <% p_labrecords.forEach(record => { %>
            <div class="combined-card">
                <h3>Lab Test Records</h3>
        
                <h4>Patient Information</h4>
                <p><strong>Patient Name:</strong> <%= record.patient_name %></p>
                <p><strong>Age:</strong> <%= record.age || 'N/A' %></p>
                <p><strong>Doctor Name:</strong> <%= record.doctor_name %></p>
        
                <!-- Display Test Results -->
                <h4>Test Results</h4>
                <% if (record.test_results.length) { %>
                    <% record.test_results.forEach(test => { %>
                        <div class="test-details">
                            <p><strong>Test Name:</strong> <%= test.test_name %></p>
                            <p><strong>Description:</strong> <%= test.description %></p>
                            <p><strong>Results:</strong> <%= test.results %></p>
                            <p><strong>Conclusion:</strong> <%= test.conclusion %></p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No lab tests recorded.</p>
                <% } %>
            </div>
        <% }) %>
        

    </div>
</div>

</body>
</html>
