<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find a Doctor</title>
    <link rel="stylesheet" href="/find_doctors.css"> 
</head>
<body>

<div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>Menu</h2>
        <a href="#">Home</a>
        <a href="#">Doctors</a>
        <a href="#">Appointments</a>
        <a href="#">Specialties</a>
        <a href="#">Hospitals</a>
        <a href="#">Settings</a>
    </div>

    <!-- Main Content -->
    <div class="main">
        <!-- Header -->
        <div class="header">
            <h2>Patients List</h2>
        </div>

        <!-- Doctors List Section -->
        <div class="doctors-list">
            <h3>Your Patients</h3>
            <div class="doctor-cards">
                <% list_of_patients.forEach(patient => { %>
                    <div class="doctor-card">
                        <img src="/user_images/<%= patient.email %>.jpeg" alt="<%= patient.name %>" class="doctor-image">
                        <div class="doctor-info">
                            <h4><%= patient.name %></h4>
                            <p>Email: <%= patient.email %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>

        <!-- Hidden input field for token -->
        <input type="hidden" id="token" value="<%= token %>">
        
    </div>
</div>

